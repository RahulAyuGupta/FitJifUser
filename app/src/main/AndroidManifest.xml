<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fitjifuser">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitjifUser"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon">
        <activity android:name=".ui.History.HistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar"></activity>
        <activity
            android:name=".ui.MyWorkout.MyWorkoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.Notification.NotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.Setting.SettingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.ChangePassword.ChangePasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.MyProfile.MyProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.SelectCategory.SelectCategoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.MainActivity2"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.OnBording.WelcomeBroadingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.Login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.MainActivity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity
            android:name=".ui.SignUp.SignupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitjifUser.NoActionBar" />
        <activity android:name=".ui.Splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>